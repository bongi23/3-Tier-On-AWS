{
  "listeners": {
    "*:80": {
      "pass": "applications/flask"
    }
  },

  "applications": {
    "flask": {
      "type": "python 3.7",
      "path": "/var/www/app/",
      "home": "/var/www/app/venv/",
      "module": "app",
      "callable": "app",
      "user": "root",
      "group": "root"
    }
  }
}